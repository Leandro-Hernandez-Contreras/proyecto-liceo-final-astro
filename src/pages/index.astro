---
import Layout from "../layouts/Layout.astro";
import Carrusel from "../components/CarruselComponent.astro";
import SeccionNoticias from "../components/SeccionNoticiasIndexComponent.astro";
import InstagramEmbed from "../components/InstagramEmbed.astro";
import { articulosDeNoticias, imagenesCarrusel } from "../data/Props";
---

<Layout>
  <!-- carrusel -->
  <div class="w-full max-w-[900px] mx-auto px-4 py-8">
    <div class="relative w-full h-96 overflow-hidden rounded-lg shadow-lg">
      <Carrusel src={imagenesCarrusel} />
    </div>
  </div>

  <!-- Seccion noticias -->
  <div class="w-full bg-cards/40 rounded-lg p-2 mb-4 flex space-x-2">
    <div class="w-full bg-red-500/[0.5] rounded-md shadow p-4">
      <div class="flex items-center space-x-6">
        <span class="bg-cards text-letras px-9 py-3 rounded-xl">
          <a href="/blog/noticias">Noticias</a>
        </span>
        <div class="overflow-hidden w-full flex">
          <div class="animate-marquee flex-shrink-0 flex items-center">
            <p class="text-letras text-3xl whitespace-nowrap px-4">
              Â¡Ya puedes postular a nuestro Liceo Aytue!...
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="w-full max-w-6xl mx-auto p-4 bg-cards/[0.7] rounded-2xl shadow-lg mb-10"
  >
    <!-- Contenido en columnas -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      <!-- Columna izquierda -->
      <div class="col-span-1 space-y-4">
        <InstagramEmbed
          permalink="https://www.instagram.com/p/DM_OLdvRJMZ/?utm_source=ig_embed&utm_campaign=loading"
        />
      </div>

      <!-- Columna derecha -->
      <div class="col-span-2 bg-cards rounded-lg p-6 shadow">
        <div class="bg-black/[0.7] text-letras rounded-lg p-4 shadow mb-5">
          Noticias Recientes
        </div>
        <div class="bg-black/[0.7] rounded-lg p-6 text-letras shadow">
          <div>
            <div>
              <SeccionNoticias noticias={articulosDeNoticias} />
            </div>
          </div>
        </div>
      </div>
    </div>
    <script async src="//www.instagram.com/embed.js"></script>
  </div>
</Layout>