---
interface Props {
  href: string;
  src: string;
  category: string;
  categoryBgClass: string;
  date: string;
  datetime: string;
  title: string;
  description: string;
}

const { href, src, category, categoryBgClass, date, datetime, title, description } = Astro.props;
---

<article class="bg-white/[0.8] rounded-xl shadow-lg overflow-hidden flex flex-col">
  
  <a href={href}>
    <img src={src} alt={title} class="w-full h-48 object-cover" />
  </a>

  <div class="p-6 flex flex-col flex-grow">
    
    <div class="flex items-center text-sm text-gray-500 mb-3">
      <span class:list={[
        "text-letras px-3 py-1 rounded-full text-xs font-semibold mr-3",
        categoryBgClass
      ]}>
        {category}
      </span>
      <time datetime={datetime}></time>
    </div>

    <a href={href}>
      <h3 class="text-xl font-bold text-gray-800 mb-3 hover:text-blue-700 transition-colors duration-200">
        {title}
      </h3>
    </a>

    <p class="text-gray-600 text-base mb-4 flex-grow">
      {description}
    </p>
    
    <a href={href} class="inline-flex items-center font-semibold text-blue-600 hover:text-blue-800">
      Leer m√°s ...
    </a>
  </div>
</article>