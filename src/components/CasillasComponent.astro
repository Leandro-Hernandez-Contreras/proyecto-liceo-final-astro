---
interface Props {
  id: string;
  label: string;
  type?: string;
}

const { id, label, type = 'text'} = Astro.props as Props;
---
<label for={id} class="block text-sm font-open text-letras">
  {label}
  <input
    id={id}
    name={id}
    type={type}
    required
    class="mt-1 block w-full rounded-md border-bordes shadow-sm p-2 border"/>
</label>

