---
export interface Props {
id: number;
title: string;
descripcion: string;
imagen?: string;
fecha: string;
categoria: string;
}


const { id, title, descripcion, imagen, fecha, categoria } = Astro.props;
---


<article class="bg-white rounded-lg shadow-md overflow-hidden transition hover:shadow-xl">
{imagen && <img src={imagen} alt={title} class="w-full h-48 object-cover" />}
<div class="p-4">
<span class="text-sm text-blue-600 font-semibold">{categoria}</span>
<h2 class="text-lg font-bold mt-1">{title}</h2>
<p class="text-gray-700 text-sm mt-2">{descripcion}</p>


<div class="mt-3 text-xs text-gray-500 flex justify-between items-center">
<time datetime={fecha}>{fecha}</time>
<a href={`/noticias/${id}`} class="text-blue-600 hover:underline">Leer más →</a>
</div>
</div>
</article>